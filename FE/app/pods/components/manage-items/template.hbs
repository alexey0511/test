<h1>Manage {{modelName}} list</h1>

<table class="ui celled table">
  <thead>
    {{#each attributes as |header|}}
    <th>{{header}}</th>
    {{/each}}
    <th></th>
  </thead>
  <tbody>
    {{#each model as |item|}}
      {{manage-items-row model=item attributes=attributes}}
    {{/each}}
    <tr>
      <td colspan="5"><button class="ui green button" disabled={{disableAddButton}} {{action 'addItem'}}>ADD</button></td>
    </tr>
  </tbody>
  <tfoot> </tfoot>
</table>
